generator client {
  provider = "prisma-client-js"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum PlaceType {
  library
  cafe
  campus
  other
}

enum SeatingLevels {
  limited
  adequette
  plentiful
}

enum BusyLevels {
  quiet
  moderate
  packed
}


model Place {
  id            String      @id @default(cuid())
  name          String
  description   String?
  link          String?
  placeType     PlaceType
  lat           Float
  lng           Float
  hasOutlets    Boolean?
  hasWifi       Boolean?
  seatingLevel  SeatingLevels?
  busyLevel     BusyLevels?
  noiseLevel    Int?        
  images        String[]    @default([])

  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt
}
